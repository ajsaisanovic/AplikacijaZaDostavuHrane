<!DOCTYPE html>
<html>
<head>
    <title>Administrator</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
<h1><em><%=restorani[0].naziv%></em></h1>
<div class="row">

    <div class="col-lg-4 col-sm-12" style="margin-left: 5%;" >
        <button type="button" class="btn btn-warning" style="width: 100%;" onclick="preusmjeri(<%=restorani[0].id%>)">Pregled svih ponuda</button>
        <button type="button" class="btn btn-warning" style="width: 100%; margin-top: 5px;" onclick="svi_dostavljaci()">Zaposli dostavljaca</button>

        <form class="forma" enctype="multipart/form-data" method="post" action="/users/dodaj/jelo/<%=restorani[0].id_administratora%>">
            <fieldset>
                <legend>Dodajte novo jelo u ponudu</legend>

                <div class="form-group ">
                    <input type="text" class="form-control"  placeholder="Naziv jela" name="ime_jela" required>
                </div>
                <div class="form-group ">
                    <select class="form-control" name="vrsta">
                        <%for(let i=0;i<vrsta_jela.length;i++){%>

                        <option value="<%=vrsta_jela[i].id%>"><%=vrsta_jela[i].naziv%></option>

                        <%}%>
                    </select>
                </div>

                <div class="form-group ">
                    <input type="text" class="form-control"  placeholder="Cijena" name="cijena" required>
                </div>

                <div class="form-group ">
                    <select class="form-control" name="restoran">
                        <%for(let i=0;i<restorani.length;i++){%>
                        <%if(restorani[i].status==='aktivan'){%>
                        <option value="<%=restorani[i].id%>"><%=restorani[i].naziv%></option>
                        <%}%>
                        <%}%>
                    </select>
                </div>
                <input type="hidden" name="grupni_meni" value="0">

                <div class="form-group p">
                    <input type="file" class="form-control"   name="file" required>
                </div>
                <div class="form-group">
                    <input type="submit" value="Dodaj" class="form-control" style="background-color: #cfc8be;">
                </div>

            </fieldset>
        </form>

    </div>

    <div class="col-lg-4 col-sm-12" style="margin-left: 5%;" >

            <button type="button" class="btn btn-warning" style="width: 100%;" onclick="odobri(<%=restorani[0].id%>)">Odobri nove narudzbe</button>
            <br>
            <button type="button" class="btn btn-warning" style="width: 100%; margin-top: 5px;" onclick="narudzbe(<%=restorani[0].id%>)">Pregled svih narudzbi</button>

        <form class="forma" enctype="multipart/form-data" method="post" action="/users/dodaj/jelo/<%=restorani[0].id_administratora%>">
            <fieldset>
                <legend>Dodajte grupni meni</legend>

                <div class="form-group ">
                    <input type="text" class="form-control"  placeholder="Naziv jela" name="ime_jela" required>
                </div>
                <div class="form-group ">
                    <select class="form-control" name="vrsta">
                        <%for(let i=0;i<vrsta_jela.length;i++){%>

                        <option value="<%=vrsta_jela[i].id%>"><%=vrsta_jela[i].naziv%></option>

                        <%}%>
                    </select>
                </div>

                <div class="form-group ">
                    <input type="text" class="form-control"  placeholder="Cijena" name="cijena" required>
                </div>

                <div class="form-group ">
                    <select class="form-control" name="restoran">
                        <%for(let i=0;i<restorani.length;i++){%>
                        <%if(restorani[i].status==='aktivan'){%>
                        <option value="<%=restorani[i].id%>"><%=restorani[i].naziv%></option>
                        <%}%>
                        <%}%>
                    </select>
                </div>

                <div class="form-group p">
                    <input type="file" class="form-control"   name="file" required>
                </div>
                <input type="hidden" name="grupni_meni" value="1">
                <div class="form-group">
                    <input type="submit" value="Dodaj" class="form-control" style="background-color: #cfc8be;">
                </div>

            </fieldset>
        </form>



    </div>



</div>

<div class="row">

    <div class="col-lg-4 col-sm-12" style="margin-left: 5%; ">

        <form class="forma" method="post" action="/users/dostavljac/racun">
        <fieldset>
            <legend>Napravi račun za novog dostavljača restorana</legend>
            <input type="hidden" value="<%=restorani[0].id%>" name="id_res">
            <input type="hidden" value="<%=restorani[0].id_administratora%>" name="id_ad">
            <div class="form-group ">
                <input type="text" class="form-control"  placeholder="Ime" name="ime" required>
            </div>
            <div class="form-group ">
                <input type="text" class="form-control"  placeholder="Prezime" name="prezime" required>
            </div>

            <div class="form-group ">
                <input type="email" class="form-control"  placeholder="Email" name="email" required>
            </div>

            <div class="form-group ">
                <input type="password" class="form-control"  placeholder="Pasvord" name="pass" required>
            </div>
            <div class="form-group ">
                <input type="text" class="form-control"  placeholder="Adresa" name="adresa" required>
            </div>
            <div class="form-group p">
                <input type="text" class="form-control"  placeholder="Broj telefona" name="br" required>
            </div>
        </fieldset>
        <div class="form-group">
            <input type="submit" value="Dodaj" class="form-control" style="background-color: #cfc8be;">
        </div><br>
        </form>
    </div>
    <div class="col-lg-4 col-sm-12" style="margin-left: 5%;" >
    <form class="forma" method="post" action="/users/dodaj/akciju/<%=restorani[0].id_administratora%>">
        <fieldset>
            <legend>Dodajte novu akciju za jelo</legend>

            <div class="form-group ">
                <select class="form-control" name="vrsta">
                    <%for(let i=0;i<jela.length;i++){%>

                    <option value="<%=jela[i].id%>"><%=jela[i].naziv%></option>

                    <%}%>
                </select>
            </div>

            <div class="form-group ">
                <input type="text" class="form-control"  placeholder="Cijena" name="cijena" required>
            </div>


            <div class="form-group p">
                <input type="text" class="form-control"  placeholder="Datum isteka" name="trajanje" required>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="form-control" style="background-color: #cfc8be;">
            </div>

        </fieldset>
    </form>
    </div>
</div>
<script>
    function preusmjeri(id){
        window.location.href="/users/administrator/meni/"+ id;
    }
    function narudzbe(id){
        window.location.href="/users/dosadasnje/narudzbe/"+id;
    }
    function odobri(id){
        window.location.href="/users/odobri/narudzbe/"+id;
    }
    function svi_dostavljaci(){
        window.location.href="/svi/dostavljaci"
    }
</script>

</body>
</html>
