<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Mapa</title>
    <meta name="viewport" content="initial-scale=1,maximum-scale=1,user-scalable=no" />
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.1.1/mapbox-gl.js"></script>
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.1.1/mapbox-gl.css" rel="stylesheet" />
    <style>
        body { margin: 0; padding: 0; }
        #map { position: absolute; top: 0; bottom: 0; width: 100%; }
    </style>
</head>
<body>
<div id="map"></div>

<script>
    mapboxgl.accessToken = 'pk.eyJ1IjoiYWpzYSIsImEiOiJja2l6dzM0ODUybHpjMnpuNHc2YXcwZDQ5In0.DVPO8XsA7IMv6PVLFGKNPQ';
    var map = new mapboxgl.Map({
        container: 'map',
        style: 'mapbox://styles/mapbox/streets-v11',
        center: [<%=lokacija[0].longitude%>, <%=lokacija[0].latitude%>],
        zoom: 18
    });

    var marker = new mapboxgl.Marker()
        .setLngLat([<%=lokacija[0].longitude%>, <%=lokacija[0].latitude%>])
        .addTo(map);
</script>

</body>
</html>