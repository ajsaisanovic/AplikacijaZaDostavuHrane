<!DOCTYPE html>
<html>
<head>
    <title>Restorani</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script
            src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body class="restorani">

<div class="container-fluid">
    <%for(let i=0;i<restorani.length;i++){%>
    <%if(restorani[i].status==='aktivan'){%>
    <div class="col-lg-4 col-sm-12 razmak">
        <div class="ikonica">
            <img src="/images/<%=restorani[i].slika%>">
            <h4><em><%=restorani[i].naziv%></em></h4>
            <p><%=restorani[i].kategorija%></p>
            <p>Adresa: <%=restorani[i].adresa%>, <%=restorani[i].grad%>
                <button type="button" class="btn btn-default" onclick="uredi('<%=restorani[i].id%>')">Uredi</button>
            </p>
            <button type="button" class="btn btn-default" onclick="r('<%=restorani[i].id%>')">Uredi meni</button>
            <button type="button" class="btn btn-warning" onclick="dodaj('<%=restorani[i].id_administratora%>')">Dodaj nova jela</button>
            <button type="button" class="btn btn-danger" onclick="obrisi('<%=restorani[i].id%>')">Ukloni restoran</button>
        </div>
    </div>
    <%}%>
    <%}%>
</div>
<script>
    function r(id){

        window.location.href="/users/administrator/meni/" + id;
    }
    function obrisi(id){
        window.location.href="/users/obrisi/restoran/" + id;
    }
    function dodaj(id){
        window.location.href="/users/administrator/restorana/pocetna/"+id;
    }
    function uredi(id){
        window.location.href="/users/uredi/restoran/"+id;
    }
</script>

</body>
</html>